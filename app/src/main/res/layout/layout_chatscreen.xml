<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rellayout1">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/back_arrow">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_back_arrow"
                        android:layout_centerVertical="true"
                        android:id="@+id/back_arrow2"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/profile_pic"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/back_arrow2"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:id="@+id/username"
                    android:layout_toLeftOf="@+id/call"
                    android:layout_toRightOf="@+id/back_arrow"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:id="@+id/last_seen"
                    android:layout_toRightOf="@id/back_arrow"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_call"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/call"
                    android:padding="5dp"
                    android:layout_toLeftOf="@+id/clear_chat"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_options"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/clear_chat"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </RelativeLayout>
    <!--Toolbar-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rellayout1"
        android:fitsSystemWindows="true"
        android:background="@drawable/chatscreen_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ff">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerview"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/ff"
            android:padding="5dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Message"
                android:id="@+id/message"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_background"
                android:layout_toLeftOf="@+id/send_message"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/locate_btn_background"
                android:id="@+id/send_message"
                android:hint="SEND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColorHint="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>